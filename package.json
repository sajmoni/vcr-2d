{
  "name": "vcr",
  "license": "MIT",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "qa": "tsc && xo --fix",
    "go": "npm run build && preview && ava",
    "release": "npm run build && np --no-tests",
    "test": "ava"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "ava": {
    "require": [
      "esbuild-runner/register"
    ],
    "extensions": [
      "ts"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "env": [
      "es2020",
      "node"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "unicorn/filename-case": "off",
      "capitalized-comments": "off"
    }
  },
  "devDependencies": {
    "ava": "3.15.0",
    "esbuild-runner": "2.2.1",
    "np": "7.6.0",
    "package-preview": "4.0.0",
    "typescript": "4.5.3",
    "xo": "0.47.0"
  }
}
