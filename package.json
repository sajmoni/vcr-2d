{
  "name": "vcr",
  "license": "MIT",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "qa": "tsc && xo --fix",
    "go": "npm run build && preview && ava",
    "release": "npm run build && np --no-tests",
    "test": "ava"
  },
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "ava": {
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "env": [
      "es2020",
      "node"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "unicorn/filename-case": "off",
      "capitalized-comments": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "husky": "^4.0.0",
    "lint-staged": "^12.1.3",
    "np": "^7.2.0",
    "package-preview": "^4.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "xo": "^0.37.0"
  }
}
